<% if notice %>
  <div class="col-md-6 col-md-offset-3">
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  </div>
<% end %>

<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Fonts</h3>
    </div>
    <div class="panel-body">
      <table class="table table-stripped table-bordered">
        <thead>
          <tr>
            <th>Font</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @fonts.each do |font| %>
            <tr>
              <td><%= font.font %></td>
              <td><%= link_to 'Show', font %></td>
              <td><%= link_to 'Edit', edit_font_path(font) %></td>
              <td><%= link_to 'Destroy', font, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Font', new_font_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>