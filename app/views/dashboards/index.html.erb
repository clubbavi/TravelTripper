<% if notice %>
  <div class="col-md-6 col-md-offset-3">
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  </div>
<% end %>
<% if alert %>
  <div class="col-md-6 col-md-offset-3">
    <div class="alert alert-warning" role="alert">
      <%= alert %>
    </div>
  </div>
<% end %>

<div class="col-md-6 col-md-offset-3">
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">Change Styling</h3>
	  </div>
	  <div class="panel-body">
	  	<%= form_for :dashboard, :url => change_styling_path do |f| %>
		  <div class="form-group">
		    <%= f.label :color %>
		    <%= f.select :color, get_colors, class:'form-control', include_blank: "Select" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :title %>
		    <%= f.select :title, get_titles, class:'form-control', include_blank: "Select" %>
		  </div>
		  <div class="form-group">
		    <%= f.label :font %>
		    <%= f.select :font, get_fonts, class:'form-control', include_blank: "Select" %>
		  </div>
		  <div class="form-group">
		    <%= f.submit 'Submit', class: 'btn btn-primary' %>
		  </div>
		<% end %>
	  </div>
	</div>
</div>

<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= current_user.dashboard.title if current_user.dashboard.present? %></h3>
    </div>
    <div class="panel-body">
      <div style="color: <%= current_user.dashboard.color if current_user.dashboard.present? %>; font-family: <%= current_user.dashboard.font if current_user.dashboard.present? %>">
      	This is the test
      </div>
    </div>
  </div>
</div>