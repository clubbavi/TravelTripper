<% if notice %>
  <div class="col-md-6 col-md-offset-3">
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  </div>
<% end %>

<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Titles</h3>
    </div>
    <div class="panel-body">
      <table class="table table-stripped table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @titles.each do |title| %>
            <tr>
              <td><%= title.title %></td>
              <td><%= link_to 'Show', title %></td>
              <td><%= link_to 'Edit', edit_title_path(title) %></td>
              <td><%= link_to 'Destroy', title, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Title', new_title_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
